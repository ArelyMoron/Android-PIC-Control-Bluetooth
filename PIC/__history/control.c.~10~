#include <16f887.h>
#fuses XT, NOWDT
#use delay(clock = 4M)
#use fast_io(D)
#use RS232(BAUD=9600,BITS=8,PARITY=N,XMIT=PIN_C6,RCV=PIN_C7)

int8 dato, i;
int dat = 6;
void main()
{
   set_tris_D(0x00);
   output_D(0x00);
   enable_interrupts(GLOBAL);
   enable_interrupts(INT_TIMER0);
   setup_timer_0(RTCC_INTERNAL | RTCC_DIV_4);
   set_TIMER0(235);
   
   while(1)
   {
      dat = getc();
      if(dat == 1)
      {
         output_low(PIN_D1);
      }
      
      else if(dat == 2)
      {
         output_high(PIN_D1);
      }
      
      else if(dat >= 6)
      {
         dato = dat;
      }
   }
}

#int_timer0
void timer0 ()
{
   i++;
   if(i == 0)
   {
      output_high(PIN_D0);
   }
   
   if(i == dato)
   {
      output_low(PIN_D0);
   }
   set_TIMER0(235);
}
